<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amanda.Roupasíntimas">

    <ScrollView>
        <StackLayout>
            <Label Text="Roupas Íntimas"
             FontSize="Title"
              HorizontalTextAlignment="Center" />

            <Button Text="sutiã" 
            Clicked="OpcaoSelecionada" />
            <Button Text="calcinha" 
            Clicked="OpcaoSelecionada" />
            <Button Text="cuecas" 
            Clicked="OpcaoSelecionada" />
            <Button Text="biquíni"
             Clicked="OpcaoSelecionada" />
            <Button Text="maiô"
            Clicked="OpcaoSelecionada" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Text="voltar"
                 Grid.Column="0" 
                 Clicked="Navegar" />
                <Button Text="selecionar" 
                Grid.Column="1"
                 Clicked="Selecionar" />
                <Button Text=">" 
                Grid.Column="2" 
                Clicked="Navegar" />
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>