                    TextColor="Black" 
                    Margin="0,10,0,20"/>
            <Button Text="elastano" 
            BackgroundColor="White"
                    TextColor="Black" 
                    Margin="0,10,0,20"/>
            <Button Text="acrílico" 
            BackgroundColor="White"
                    TextColor="Black" 
                    Margin="0,10,0,20"/>
            <Button Text="renda" 
            BackgroundColor="White"
                    TextColor="Black" 
                    Margin="0,10,0,20"/>
            <Button Text="viscose" 
            BackgroundColor="White"
                    TextColor="Black" 
                    Margin="0,10,0,20"/>
            <Button Text="confirmar seleção" 
            BackgroundColor="White"
                    TextColor="Black" 
                    Margin="0,10,0,20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
