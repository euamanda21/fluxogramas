<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amanda.Financeiro"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#D8BFD8"
             Title="Financeiro">

        <ContentPage.Content>
         <StackLayout 
         Padding="30" 
        HorizontalOptions="Center" 
        VerticalOptions="Center">

            <Label Text="Financeiro"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Quais são as suas despesas?"
            TextColor="Black"
            BackgroundColor="White"/>

            <Entry Placeholder="Verificar entrada e saída de caixa"
            TextColor="Black"
            BackgroundColor="White"/>
       

       

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Text="Cancelar" Grid.Column="0" />
            <Button Text="Salvar" Grid.Column="1" />
        </Grid>
    </Grid>
</ContentPage>