<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 

             x:Class="amanda.Vestidos"> 


    <StackLayout>
        <Label Text="Vestidos" 
        FontSize="Title"
         HorizontalTextAlignment="Center" />

        <Button Text="Vestidos Curtos" 
        Clicked="Button_Clicked" />
        <Button Text="Vestidos Midi" 
        Clicked="Button_Clicked" />
        <Button Text="Vestidos Longos" 
        Clicked="Button_Clicked" />
        <Button Text="Vestido de Festas" 
        Clicked="Button_Clicked" />
        <Button Text="Vestidos de Gala" 
        Clicked="Button_Clicked" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Text="<" 
            Grid.Column="0" 
            Clicked="NavigationButton_Clicked" />
            <Button Text="Selecionar" 
            Grid.Column="1" 
            Clicked="SelecionarButton_Clicked" />
            <Button Text=">" 
            Grid.Column="2" 
            Clicked="NavigationButton_Clicked" />
        </Grid>
    </StackLayout>
</ContentPage>