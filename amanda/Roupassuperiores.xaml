        FontSize="Title" 
        HorizontalTextAlignment="Center" />

        <Button Text="Camisetas básicas" 
        Clicked="OpcaoSelecionada" />
        <Button Text="camisas polo"
        Clicked="OpcaoSelecionada" />
        <Button Text="Camisas de botão" 
        Clicked="OpcaoSelecionada" />
        <Button Text="cropped" 
        Clicked="OpcaoSelecionada" />
        <Button Text="body" 
        Clicked="OpcaoSelecionada" />
        <Button Text="blusa manga longa" 
        Clicked="OpcaoSelecionada" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Text="voltar"
             Grid.Column="0"
              Clicked="Navegar" />
